{
  "name": "nfib",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/sc1pex/devcontainers-setup/setup:0": {
      "git_username": "Sc1pex",
      "git_email": "scipex.dev@gmail.com"
    },
    "ghcr.io/sc1pex/devcontainers-features/meson:1": {},

    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.23"
    }
  },
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind",
    "source=nvim_lazy_cache,target=/home/vscode/.local/share/nvim/lazy,type=volume"
  ],
  "postCreateCommand": "sudo chown -R vscode:vscode /home/vscode/.local"
}
